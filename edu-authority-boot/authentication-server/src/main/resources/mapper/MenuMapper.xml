<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.lagou.authority.mapper.MenuMapper">

    <resultMap id="BaseResultMap" type="com.lagou.authority.entity.bo.Menu">
            <id property="id" column="id" jdbcType="INTEGER"/>
            <result property="parentId" column="parent_id" jdbcType="INTEGER"/>
            <result property="href" column="href" jdbcType="VARCHAR"/>
            <result property="icon" column="icon" jdbcType="VARCHAR"/>
            <result property="name" column="name" jdbcType="VARCHAR"/>
            <result property="description" column="description" jdbcType="VARCHAR"/>
            <result property="orderNum" column="order_num" jdbcType="INTEGER"/>
            <result property="shown" column="shown" jdbcType="TINYINT"/>
            <result property="level" column="level" jdbcType="INTEGER"/>
            <result property="createdTime" column="created_time" jdbcType="TIMESTAMP"/>
            <result property="updatedTime" column="updated_time" jdbcType="TIMESTAMP"/>
            <result property="createdBy" column="created_by" jdbcType="VARCHAR"/>
            <result property="updatedBy" column="updated_by" jdbcType="VARCHAR"/>
    </resultMap>

    <sql id="Base_Column_List">
        id,parent_id,href,
        icon,name,description,
        order_num,shown,level,
        created_time,updated_time,created_by,
        updated_by
    </sql>

    <select id="getByRoleIdIgnoreIsShown" resultType="com.lagou.authority.entity.bo.Menu">
        select distinct
            m.id,
            m.parent_id,
            m.href,
            m.icon,
            m.name,
            m.description,
            m.order_num,
            m.shown,
            m.level,
            m.created_time,
            m.updated_time,
            m.created_by,
            m.updated_by
        from menu m left join role_menu_relation r on r.menu_id = m.id
        where r.role_id = #{roleId}
    </select>
    <select id="queryByRoleIds" resultType="com.lagou.authority.entity.bo.Menu">
        select distinct
            m.id,
            m.parent_id,
            m.href,
            m.icon,
            m.name,
            m.description,
            m.order_num,
            m.shown,
            m.level,
            m.created_time,
            m.updated_time,
            m.created_by,
            m.updated_by
        from menu m left join role_menu_relation r on r.menu_id = m.id
        where  r.role_id in
        <foreach collection="roleIds" item="roleId" open="(" close=")" separator="," >
            #{roleId}
        </foreach>
        and m.shown = 1
    </select>
</mapper>
